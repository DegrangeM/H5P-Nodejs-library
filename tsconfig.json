{
    "exclude": ["node_modules"],
    "include": [
        "packages/h5p-server/src/**/*.ts",
        "packages/h5p-server/test/**/*.ts",
        "packages/h5p-examples/src/**/*.ts",
        "packages/h5p-examples/src/**/*.tsx",
        "packages/h5p-examples/test/**/*.ts",
        "packages/h5p-express/src/**/*.ts",
        "packages/h5p-express/test/**/*.ts",
        "packages/h5p-mongos3/src/**/*.ts",
        "packages/h5p-mongos3/test/**/*.ts",
        "packages/h5p-html-exporter/src/**/*.ts",
        "packages/h5p-html-exporter/test/**/*.ts",
        "packages/h5p-webcomponents/src/**/*.ts",
        "packages/h5p-webcomponents/test/**/*.ts",
        "packages/h5p-react/src/**/*.ts",
        "packages/h5p-react/src/**/*.tsx",
        "packages/h5p-react/test/**/*.ts",
        "packages/h5p-rest-example-server/src/**/*.ts",
        "packages/h5p-rest-example-client/src/**/*.ts",
        "packages/h5p-rest-example-client/src/**/*.tsx"
    ],
    "compilerOptions": {
        "outDir": "./build-ide",
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "removeComments": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "declaration": true
    }
}
